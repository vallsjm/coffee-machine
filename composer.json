{
    "require": {
        "symfony/console": "^4.2",
        "symfony/dependency-injection": "^4.2",
        "symfony/config": "^4.2",
        "symfony/yaml": "^4.2",
        "beberlei/assert": "^3.2",
        "ramsey/uuid": "^4.1",
        "symfony/messenger": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/Unit",
            "Tests\\Integration\\": "tests/Integration"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "phpstan/phpstan": "^0.12.54",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests/ --colors=always",
        "analyze": "./vendor/bin/phpstan analyse src/ --level=1",
        "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
    }
}
